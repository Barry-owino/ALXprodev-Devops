#!/bin/bash

# Output CSV file
report_file="pokemon_report.csv"

# Header for CSV
echo "Name,Height (m),Weight (kg)" > "$report_file"

# Read all JSON files in pokemon_data
for file in pokemon_data/*.json; do
    name=$(jq -r '.name' "$file" | awk '{print toupper(substr($0,1,1)) tolower(substr($0,2))}')
    height=$(jq -r '.height' "$file" | awk '{printf "%.1f", $1/10}') # dm to m
    weight=$(jq -r '.weight' "$file" | awk '{printf "%.1f", $1/10}') # hg to kg
    
    echo "$name,$height,$weight" >> "$report_file"
done

echo "CSV Report generated at: $report_file"
echo
cat "$report_file"

echo

# Calculate averages
awk -F',' 'NR>1 {total_h+=$2; total_w+=$3; count++} 
END {
    printf "Average Height: %.2f m\n", total_h/count
    printf "Average Weight: %.2f kg\n", total_w/count
}' "$report_file"

