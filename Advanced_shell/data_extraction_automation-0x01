#!/bin/bash

# Extract the data using jq
name=$(jq -r '.name' data.json)
height=$(jq -r '.height' data.json)
weight=$(jq -r '.weight' data.json)
type=$(jq -r '.types[0].type.name' data.json)

# Convert height (decimeters) to meters
height_m=$(awk "BEGIN {printf \"%.1f\", $height/10}")

# Convert weight (hectograms) to kilograms
weight_kg=$(awk "BEGIN {printf \"%.1f\", $weight/10}")

# Capitalize the first letter of the type
type_cap=$(echo "$type" | sed 's/^\(.\)/\U\1/')

# Print in the requested format
echo "$name is of type $type_cap, weighs ${weight_kg}kg, and is ${height_m}m tall."

