#!/bin/bash

# Directory to store data
mkdir -p pokemon_data

# Error log file
ERROR_FILE="errors.txt"
> "$ERROR_FILE"

# List of Pokémon
POKEMONS=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")

# Loop through Pokémon list
for pokemon in "${POKEMONS[@]}"; do
    echo "Fetching data for $pokemon..."
    
    success=false
    for attempt in {1..3}; do
        # API request
        response=$(curl -s -w "%{http_code}" -o "pokemon_data/${pokemon}.json" "https://pokeapi.co/api/v2/pokemon/${pokemon}")

        # Check HTTP status
        if [ "$response" -eq 200 ]; then
            echo "Saved data to pokemon_data/${pokemon}.json ✅"
            success=true
            break
        else
            echo "Attempt $attempt failed for $pokemon (HTTP $response). Retrying..."
            sleep 2
        fi
    done

    # If all retries failed → log error
    if [ "$success" = false ]; then
        echo "$pokemon failed after 3 attempts." >> "$ERROR_FILE"
    fi

    # Delay to avoid hitting API too fast
    sleep 1
done

